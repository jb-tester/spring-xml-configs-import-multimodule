        <ref bean="moduleBBean1_extra1"/>
        <ref bean="moduleCBean1_shared1"/>
        <ref bean="moduleCBean1_extra1"/>
        <ref bean="moduleDBean1_shared1"/>
        -->
    </util:list>
</beans>